@model Flight

@{
    ViewBag.Title = "FlightDetails";
}

<h2>@Model.Code: @Model.DepartureCity.Name - @Model.DestinationCity.Name</h2>
<button class="btn btn-danger btn-register" data-toggle="modal" data-target="#registerModal">Register for a flight</button>

<p><b>Plane:</b> @Model.PlaneModel</p>
<p><b>Plane Year:</b> @Model.Year</p>
<p><b>Maximum passengers number:</b> @Model.PassengersNumber</p>

<div>
    <button class="btn btn-default see-btn" data-toggle="collapse" data-target="#crewMembers">Crew members</button>
</div>
<div id="crewMembers" class="collapse">
    @Html.Partial("_CrewMembers", Model.CrewMembers)
</div>
<div>
    <button class="btn btn-default see-btn" data-toggle="collapse" data-target="#passengers">Passengers list</button>
</div>
<div id="passengers" class="collapse">
    @Html.Partial("_Passengers", Model.Passengers);
</div>

<!-- Modal -->
<div class="modal fade" id="registerModal" tabindex="-1" role="dialog" aria-labelledby="registerModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Register for a Flight</h4>
            </div>
            <div class="modal-body">
                <form class="register-form" method="post">
                    <input type="hidden" class="form-control" name="flightId" value="@Model.Id">
                    <div class="form-group">
                        <label for="firstName">First name</label>
                        <input type="text" class="form-control" name="firstName" id="firstName" placeholder="First name">
                    </div>
                    <div class="form-group">
                        <label for="lastName">Last name</label>
                        <input type="text" class="form-control" name="lastName" id="lastName" placeholder="Last name">
                    </div>
                    <div class="form-group">
                        <label for="sex">Sex</label>
                        <input type="text" class="form-control" age="age" id="sex" placeholder="Sex">
                    </div>
                    <div class="form-group">
                        <label for="country">Country</label>
                        <input type="text" class="form-control" name="country" id="country" placeholder="Country">
                    </div>
                    <div class="form-group">
                        <label for="lastName">Age</label>
                        <input type="text" class="form-control" age="age" id="age" placeholder="Age">
                    </div>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" id="returnTicket" name="returnTicket"> I have return ticket
                        </label>
                    </div>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" id="specialNeeds" name="specialNeeds"> I have special needs
                        </label>
                    </div>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" id="vegetarian" name="vegeterian"> I'm a vegetarian
                        </label>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Register</button>
                    </div>
                </form>
            </div>
            
        </div>
    </div>
</div>